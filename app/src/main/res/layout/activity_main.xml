<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.christopherpanella.weathertest.MainActivity">


    <EditText
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:id="@+id/location"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:hint="Location"
        android:textAlignment="center"
        android:editable="true"
        android:inputType="textCapWords|textAutoComplete|textAutoCorrect"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:text="What's the weather?"
        android:id="@+id/weatherButton"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="140dp"
            android:layout_centerInParent="true"
            android:id="@+id/backgroundMain"
            android:src="@mipmap/wow"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weatherText"
            android:layout_below="@+id/backgroundMain"/>

    </RelativeLayout>
</FrameLayout>
